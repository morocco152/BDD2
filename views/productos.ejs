                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Productos</h1>
                    </div>


                </div>
                <!-- /.container-fluid -->

                <form action="/productos" method="post">
                    <div class="row justify-content-center">
                        <div class="col-10">

                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label for="nombreCliente">IdProducto</label>
                                    <input type="text" step="any" class="form-control form-control-user" id="IdProducto" name="IdProducto" placeholder="001">
                                </div>
                                <div class="col-sm-6">
                                    <label for="apellidosCliente">Precio</label>
                                    <input type="text" class="form-control form-control-user" id="PrecioProducto" name="PrecioProducto" placeholder="99.99">
                                </div>
                                <div class="col-sm-6">
                                    <label for="apellidosCliente">Stock</label>
                                    <input type="text" class="form-control form-control-user" id="StockProducto" name="StockProducto" placeholder="45">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="tipoComprobante" class="">Estado</label>
                                <select class="form-control form-control-user" id="EstadoProducto" name="EstadoProducto" placeholder="Disponible">
                                    <option value="1">Disponible</option>
                                    <option value="2">No disponible</option>
                                </select>
                            </div>
                
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label for="dniCliente">Nombre del Producto</label>
                                    <input type="text" class="form-control form-control-user" id="NombreProducto" name="NombrePro" placeholder="Licuadora">
                                </div>
                                <div class="col-sm-6">
                                    <label for="telefonoCliente">Descripcion</label>
                                    <input type="text" class="form-control form-control-user" id="DescripcionProducto" name="DescripcionProducto" placeholder="3 Velocidades">
                                </div>
                            </div>
                        </div>
                    </div>
                
                    <div class="row justify-content-center">
                        <div class="col-2">
                            <a href="#" class="btn btn-success btn-icon-split">
                                            <span class="icon text-white-50">
                                                <i class="fas fa-check"></i>
                                            </span>
                                <span class="text">GUARDAR</span>
                            </a>
                        </div>
                    </div>

                </form>
                
                <hr>
                
                <div class="row justify-content-center">
                    <div class="col-11">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                            <tr>
                                <td>ID PRODUCTO</td>
                                <td>NOMBRE</td>
                                <td>DESCRIPCION</td>
                                <td>STOCK</td>
                                <td>PRECIO</td>
                                <td>ESTADO</td>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>1</td>
                                <td>LICUADORA</td>
                                <td>3 VELOCIDADES</td>
                                <td>56</td>
                                <td>77.99</td>
                                <td>AVAIBLE</td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>SECADORA</td>
                                <td>3 VELOCITY</td>
                                <td>561</td>
                                <td>199.99</td>
                                <td>UNAVAIBLE</td>
                            </tr>
                        </table>
                    </div>
                </div>
