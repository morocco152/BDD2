<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Dashboard</title>

    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/css/sb-admin-2.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <% include includes/sidebar.ejs %>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <% include includes/topbar.ejs %>

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Productos</h1>
                    </div>


                </div>
                <!-- /.container-fluid -->

                <% if (estado==="errorCrear"){%>
                    <h3 class="text-danger">Error al crear producto</h3>
                <%}%>

                <% if (estado==="productoCreado"){%>
                    <h3 class="text-success">Nuevo producto creado con Ã©xito</h3>
                <%}%>
                <form action="/productos" method="post">
                    <div class="row justify-content-center">
                        <div class="col-10">

                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label for="nombreCliente">IdProducto</label>
                                    <input type="text" step="any" class="form-control form-control-user" id="IdProducto" name="IdProducto" placeholder="001">
                                </div>
                                <div class="col-sm-6">
                                    <label for="apellidosCliente">Precio</label>
                                    <input type="text" class="form-control form-control-user" id="PrecioProducto" name="PrecioProducto" placeholder="99.99">
                                </div>
                                <div class="col-sm-6">
                                    <label for="apellidosCliente">Stock</label>
                                    <input type="text" class="form-control form-control-user" id="StockProducto" name="StockProducto" placeholder="45">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="tipoComprobante" class="">Estado</label>
                                <select class="form-control form-control-user" id="EstadoProducto" name="EstadoProducto" placeholder="Disponible">
                                    <option value="avaible">Disponible</option>
                                    <option value="unavaible">No disponible</option>
                                </select>
                            </div>
                
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label for="dniCliente">Nombre del Producto</label>
                                    <input type="text" class="form-control form-control-user" id="NombreProducto" name="NombrePro" placeholder="Licuadora">
                                </div>
                                <div class="col-sm-6">
                                    <label for="telefonoCliente">Descripcion</label>
                                    <input type="text" class="form-control form-control-user" id="DescripcionProducto" name="DescripcionProducto" placeholder="3 Velocidades">
                                </div>
                            </div>
                        </div>
                    </div>
                
                    <div class="row justify-content-center">
                        <div class="col-2">
                            <button type="submit" class="btn btn-success btn-icon-split">
                                            <span class="icon text-white-50">
                                                <i class="fas fa-check"></i>
                                            </span>
                                <span class="text">GUARDAR</span>
                            </button>
                        </div>
                    </div>

                </form>
                
                <hr>
                <% if (estado==="errorBorrar"){%>
                    <h3 class="text-danger">Error al borrar producto</h3>
                <%}%>    
                <div class="row justify-content-center">
                    <div class="col-11">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                            <tr>
                                <td>ID PRODUCTO</td>
                                <td>NOMBRE</td>
                                <td>DESCRIPCION</td>
                                <td>STOCK</td>
                                <td>PRECIO</td>
                                <td>ESTADO</td>
                                <td></td>
                            </tr>
                            </thead>
                            <tbody>
                                <% for (let idx = 0; idx < listaProductos.length; idx++){ %>
                                    <tr>
                                        <td><%= listaProductos[idx].IdProducto %></td>
                                        <td><%= listaProductos[idx].Nombre_Producto %></td>
                                        <td><%= listaProductos[idx].Descripcion_Producto %></td>
                                        <td><%= listaProductos[idx].Stock %></td>
                                        <td><%= listaProductos[idx].Precio %></td>
                                        <td><%= listaProductos[idx].Estado === "avaible"? "DISPONIBLE": "NO HAY" %></td>
                                        <td>
                                            <a href="/productos/<%= listaProductos[idx].IdProducto %>" type="submit" class="btn btn-danger btn-icon-split">
                                                <span class="icon text-white-50">
                                                    <i class="fas fa-check"></i>
                                                </span>
                                                <span class="text">BORRAR</span>
                                            </a>
                                            <form action="/productos/editar/<%= listaProductos[idx].IdProducto %>" method="post">
                                                <button type="submit" class="btn btn-warning btn-icon-split">
                                                    <span class="icon text-white-50">
                                                        <i class="fas fa-check"></i>
                                                    </span>
                                                    <span class="text">EDITAR</span>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                <%}%>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- Here the code -->  
            </div>
        </div>
    </div>
</div>


    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
</body>

</html>