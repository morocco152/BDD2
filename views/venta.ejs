    <script>
        function cargar(datos){
            let lista = datos.listaProductos;
            console.log("Datos:", lista);
            let tabla = document.getElementById("contenido");
            console.log("---> ", tabla);
            tabla.innerHTML = "";
            for (let idx = 0; idx < lista.length; idx++){
                let producto = lista[idx];
                console.log("-", producto);
                tabla.innerHTML += '<tr><td>' + lista[idx].IdProducto + '</td>' +
                                    '<td>' + lista[idx].Stock + '</td>' +
                                    '<td>' + lista[idx].Descripcion_Producto + '</td>' +
                                    '<td>' + lista[idx].Precio + '</td>' +
                                    '<td><button onclick="obtenerUnProducto(' + lista[idx].IdProducto + ');" class="btn btn-success">SELECCIONAR</button></td>' +
                                '</tr>';
            }
        };

        function cargarProducto(producto){
            let tabla = document.getElementById("productos");
            console.log("---> ", tabla);
            tabla.innerHTML += '<tr><td>' + producto.IdProducto + '</td>' +
                                    '<td>' + producto.Stock + '</td>' +
                                    '<td>' + producto.Descripcion_Producto + '</td>' +
                                    '<td>' + producto.Precio + '</td>' +
                                '</tr>';
        };

        function cargarProductos(){
            $.ajax(
            '/productos/lista',
            {
                success: function(data) {
                    cargar(data);
                },
                error: function() {
                    alert('There was some error performing the AJAX call!');
                }
            }
            );
        }

        function obtenerUnProducto(idProducto){
            $.ajax(
            '/unproducto/' + idProducto,
            {
                success: function(data) {
                    cargarProducto(data);
                },
                error: function() {
                    alert('There was some error performing the AJAX call!');
                }
            }
            );
        }
        </script>
