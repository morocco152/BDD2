                <form action="/reserva" method="post">
                    <div class="row justify-content-center">
                        <div class="col-10">

                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label for="IdReserva">Id Reserva</label>
                                    <input type="text" step="any" class="form-control form-control-user" id="IdReserva" name="IdReserva" placeholder="001">
                                </div>
                                <div class="col-sm-6">
                                    <label for="IdCliente">Id Cliente</label>
                                    <input type="text" class="form-control form-control-user" id="IdCliente" name="IdCliente" placeholder="001">
                                </div>
                                <div class="col-sm-6">
                                    <label for="IdProducto">Id Producto</label>
                                    <input type="text" class="form-control form-control-user" id="IdProducto" name="IdProducto" placeholder="001">
                                </div>
                            </div>
                
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label for="fechaInicio" class="">Fecha Inicio</label>
                                    <input type="date" class="form-control form-control-user" id="fechaInicio" name="fechaInicio" placeholder="09/12/1999">
                                </div>
                                <div class="form-group">
                                    <label for="fechaFin" class="">Fecha Fin</label>
                                    <input type="date" class="form-control form-control-user" id="fechaFin" name="fechaFin" placeholder="29/12/1999">
                                </div>
                            </div>  

                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label for="AnticipoR">Anticipo</label>
                                    <input type="text" step="any" class="form-control form-control-user" id="AnticipoR" name="AnticipoR" placeholder="100">
                                </div>
                                <div class="col-sm-6">
                                    <label for="DiferenciaR">Diferencia</label>
                                    <input type="text" class="form-control form-control-user" id="DiferenciaR" name="DiferenciaR" placeholder="200">
                                </div>
                                <div class="col-sm-6">
                                    <label for="RPrecio">Precio</label>
                                    <input type="text" class="form-control form-control-user" id="RPrecio" name="RPrecio" placeholder="300">
                                </div>
                            </div>

                        </div>
                    </div>
                
                    <div class="row justify-content-center">
                        <div class="col-2">
                            <a href="#" class="btn btn-success btn-icon-split">
                                            <span class="icon text-white-50">
                                                <i class="fas fa-check"></i>
                                            </span>
                                <span class="text">GUARDAR</span>
                            </a>
                        </div>
                    </div>

                </form>
                
                <hr>
                
                <div class="row justify-content-center">
                    <div class="col-11">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
